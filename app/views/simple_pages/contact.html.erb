<div class="contact">
<h1> Contact Us </h1>
</div>

<% flash[:notice] %>
<div class="container">
  <%= form_tag("/simple_pages/thank_you") do %>
  <div class ="row">
    <div class="contact_form  col-lg-6 col-lg-offset-3 col-md-6 col-xs-12">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true %>
      </div>
      <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" ,  rows:4 , :required => true %>
      </div>
      <br>
      <%= submit_tag "Send", class: "btn btn-info contact_button" %>
      <% end %>
    </div>
    <div class="map  col-lg-6 col-md-6 ">
      <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d1411.986279538466!2d34.35703190855365!3d31.42165439561615!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1sen!2sus!4v1508767767376" width="80%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
  </div>
</div>
